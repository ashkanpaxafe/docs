{
  "openapi": "3.0.0",
  "info": {
    "title": "Live Risk Response API",
    "version": "1.0.0"
  },
  "components": {
    "schemas": {
      "LiveRiskResponse": {
        "type": "object",
        "properties": {
          "status_code": {
            "type": "string",
            "enum": ["PXSC100", "PXSC101", "PXSC102", "PXER100", "PXER101", "PXER102"],
            "example": "PXSC100"
          },
          "shipment_id": {
            "type": "string",
            "example": "SHIP12345"
          },
          "device_id": {
            "type": "string",
            "example": "DEV67890"
          },
          "risk_level": {
            "type": "string",
            "enum": ["Ignore", "Watch", "Act"],
            "example": "Ignore"
          },
          "risk_summary": {
            "type": "string",
            "example": "The shipment is predicted to breach the temperature limit 2-10 C in the next 120 minutes, the shipment is dwelling at the current leg longer than usual but may still arrive at the destination on time."
          },
          "delivery_impact": {
            "type": "object",
            "properties": {
              "risk_level": {
                "type": "string",
                "enum": ["Ignore", "Watch", "Act"],
                "example": "Ignore"
              },
              "leg": {
                "type": "object",
                "properties": {
                  "current_leg": {
                    "type": "string",
                    "example": "LEG123"
                  },
                  "leg_type": {
                    "type": "string",
                    "enum": ["stop", "segment", "N/A"],
                    "example": "stop"
                  },
                  "leg_current_duration": {
                    "oneOf": [
                      {"type": "integer"},
                      {"type": "string"}
                    ],
                    "example": 1440
                  },
                  "leg_typical_duration": {
                    "type": "integer",
                    "description": "Average duration / dwell time of shipments during this leg."
                  },
                  "pta": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2024-05-21T21:45:06Z"
                  }
                }
              },
              "final_destination": {
                "type": "object",
                "properties": {
                  "contracted_delivery_time": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2023-01-05T08:20:59Z"
                  },
                  "shipment_transit_time": {
                    "type": "number",
                    "format": "float",
                    "example": 3510.5
                  },
                  "pta": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2024-05-21T21:45:06Z"
                  },
                  "delayed": {
                    "type": "boolean",
                    "example": false
                  },
                  "delayed_by": {
                    "type": "integer",
                    "example": 0
                  }
                }
              }
            }
          },
          "temperature_impact": {
            "type": "object",
            "properties": {
              "risk_level": {
                "type": "string",
                "enum": ["Ignore", "Watch", "Act"],
                "example": "Watch"
              },
              "current_temperature": {
                "type": "number",
                "format": "float",
                "example": 23.5
              },
              "mean_temperature_at_location_historical": {
                "oneOf": [
                  {"type": "number"},
                  {"type": "null"}
                ],
                "example": 22.8
              },
              "std_deviation_temperature_at_location_historical": {
                "oneOf": [
                  {"type": "number"},
                  {"type": "null"}
                ],
                "example": 1.2
              },
              "temp_ranges": {
                "type": "object",
                "additionalProperties": {
                  "$ref": "#/components/schemas/TemperatureRange"
                }
              }
            }
          },
          "external_impact": {
            "type": "object",
            "properties": {
              "risk_level": {
                "type": "string",
                "enum": ["Ignore", "Watch", "Act"],
                "example": "Watch"
              },
              "event_summary": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "example": [
                  "INMET issues alert starting on: 09/30/2024 10:32. Slight health risk. Temperature 5Â°C above average for a period of 02 to 03 days.",
                  "INMET issues alert starting on: 09/30/2024 09:33. Relative humidity varying between 30% and 20%. Low risk of forest fires and health issues."
                ]
              },
              "impacted_location": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "example": ["Sao Paulo", "Technopark"]
              },
              "event_type": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "example": ["weather:Heat wave", "weather:Low Humidity"]
              },
              "event_start_time": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "event_expiry": {
                "type": "array",
                "items": {
                  "type": "string",
                  "format": "date-time"
                },
                "example": [
                  "2024-10-02T23:59:00-03:00",
                  "2024-09-30T23:00:00-03:00"
                ]
              }
            }
          },
          "location_status": {
            "type": "string"
          }
        }
      },
      "TemperatureRange": {
        "type": "object",
        "properties": {
          "pte": {
            "oneOf": [
              {"type": "string"},
              {"type": "null"}
            ],
            "example": "normal temperature"
          },
          "excursion": {
            "type": "boolean",
            "example": false
          },
          "time_out_of_range": {
            "type": "integer",
            "example": 540
          },
          "remaining_time_out_of_range": {
            "type": "integer",
            "example": 60
          },
          "remaining_shelf_life": {
            "type": "string",
            "example": "10%"
          },
          "num_excursions": {
            "type": "integer"
          },
          "low_limit": {
            "type": "integer"
          },
          "up_limit": {
            "type": "integer",
            "example": 8
          }
        }
      }
    }
  }
}
